{
  "name": "ccs",
  "version": "1.0.0",
  "description": "🔄 Claude Code Configuration Switcher - 一个强大的多平台命令行工具，支持快速切换Claude Code API配置，提供全局配置持久化、Web界面管理、智能模型选择等功能，完美支持Bash/Zsh/Fish/PowerShell等多种Shell环境",
  "main": "scripts/shell/ccs.sh",
  "scripts": {
    "install": "cd scripts/install && bash install.sh",
    "install:windows": "cd scripts/install && cmd.exe /c install.bat",
    "uninstall": "cd scripts/install && bash install.sh --uninstall",
    "test": "bash scripts/shell/ccs.sh list",
    "quick-install": "curl -L https://github.com/bahayonghang/ccs/raw/main/scripts/install/quick_install/quick_install.sh | bash"
  },
  "keywords": [
    "claude",
    "claude-code",
    "api",
    "configuration",
    "switcher",
    "bash",
    "zsh",
    "fish",
    "powershell",
    "windows",
    "linux",
    "macos",
    "shell",
    "cli",
    "toml",
    "environment-variables",
    "anthropic",
    "openai",
    "ai",
    "llm",
    "developer-tools",
    "cross-platform",
    "web-interface",
    "config-management"
  ],
  "author": "bahayonghang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahayonghang/ccs.git"
  },
  "bugs": {
    "url": "https://github.com/bahayonghang/ccs/issues"
  },
  "homepage": "https://github.com/bahayonghang/ccs#readme",
  "directories": {
    "doc": "docs",
    "config": "config",
    "script": "scripts"
  },
  "engines": {
    "bash": ">=4.0",
    "fish": ">=3.0",
    "powershell": ">=5.1"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "files": [
    "scripts/",
    "config/",
    "web/",
    "docs/",
    "assets/"
  ]
}