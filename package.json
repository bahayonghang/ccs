{
  "name": "ccs",
  "version": "2.0.0",
  "description": "Cross-platform CLI tool for managing and switching between multiple Claude Code API configurations",
  "private": false,
  "bin": {
    "ccs": "scripts/shell/ccs.sh"
  },
  "scripts": {
    "install": "cd scripts/install && bash install.sh",
    "install:windows": "cd scripts/install && cmd.exe /c install.bat",
    "uninstall": "cd scripts/install && bash install.sh --uninstall",
    "test": "bash scripts/shell/ccs.sh list"
  },
  "keywords": [
    "claude-code",
    "api-configuration",
    "cli-tool",
    "config-management",
    "anthropic",
    "cross-platform",
    "bash",
    "fish",
    "powershell",
    "toml",
    "environment-variables",
    "web-interface"
  ],
  "author": "bahayonghang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahayonghang/ccs.git"
  },
  "bugs": {
    "url": "https://github.com/bahayonghang/ccs/issues"
  },
  "homepage": "https://github.com/bahayonghang/ccs#readme",
  "directories": {
    "doc": "docs",
    "config": "config",
    "script": "scripts"
  },
  "shellEngines": {
    "bash": ">=4.0",
    "fish": ">=3.0",
    "powershell": ">=5.1"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "files": [
    "scripts/",
    "config/",
    "web/",
    "docs/",
    "assets/"
  ]
}